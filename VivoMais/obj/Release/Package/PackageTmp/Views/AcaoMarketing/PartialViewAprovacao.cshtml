@model IEnumerable<VivoMais.Repositorio.Entidades.AcaoMarketing>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">VIVO MAIS+</h4>
</div>

<div class="panel-body">
    <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Parceiro</th>
                    <th>Descrição da Ação</th>
                    <th>Mídia</th>
                    <th>Mídia Detalhada</th>
                    <th>Campanha</th>
                    <th>Foco Principal</th>
                    <th>Origem de Verba</th>
                    <th>%</th>
                    <th>R$ da Ação</th>
                    <th>R$ da Vivo</th>
                </tr>
            </thead>

            <tbody>
                @foreach (VivoMais.Repositorio.Entidades.AcaoMarketing Acao in Model)
                {
                    <tr class="odd gradeX">
                        <td>@Acao.Parceiro.Rede</td>
                        <td>@Acao.DescricaoAcao</td>
                        <td>@Acao.Midia.Midia</td>
                        <td>@Acao.MidiaDetalhada.MidiaDetalhada</td>
                        <td>@Acao.CampanhaMacro</td>
                        <td>@Acao.FocoPrincipal</td>
                        <td>@Acao.OrigemVerba</td>
                        <td>@Acao.PercentualParticipacaoVivo</td>
                        <td>@Acao.ValorTotalAcao</td>
                        <td>@Acao.ValorTotalVivo</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>