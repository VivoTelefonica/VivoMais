            type: 'GET',
            dataType: 'html',
            cache: false,
            success: function (response) {
                $('#DivPartialViewAtualizacao').html(response);
            },
            failure: function (response) {
                alert("error!");
            },
            error: function (response) {
                alert("error!");
            }
        });
    }

